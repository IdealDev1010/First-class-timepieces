<div class="page-width page-content">

  {% include 'breadcrumbs' %}

  <div class="grid">
    <div class="grid__item medium-up--three-quarters medium-up--push-one-eighth">

      <header class="section-header">
        <h1 class="section-header__title">{{ page.title }}</h1>
      </header>

      <div class="rte text-spacing">
        {{ page.content }}
      </div>

      <div class="form-vertical">
        {% form 'contact' %}

           <!-- Redirect to the Thank You page after submission -->
           <input type="hidden" name="return_to" value="/pages/thank-you-sell-your-watch">
          
          {% if form.posted_successfully? %}
            <p class="note note--success">
              {{ 'contact.form.post_success' | t }}
            </p>
          {% endif %}

          {{ form.errors | default_errors }}

          <div class="grid grid--small">
            <div class="grid__item medium-up--one-half">
              <label for="ContactFormName">{{ 'contact.form.name' | t }}</label>
              <input type="text" id="ContactFormName" class="input-full" name="contact[name]" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
            </div>

            <div class="grid__item medium-up--one-half">
              <label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
              <input type="email" id="ContactFormEmail" class="input-full" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
            </div>
          </div>

          <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
          <input type="tel" id="ContactFormPhone" class="input-full" name="contact[phone]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">
  
          <label for="tradeorSell">Trade or sell?</label>
          <select id="tradeorSell" name="contact[tradeorSell]">
            <option>Trade my watch</option>
            <option>Sell my watch</option>
            <option>Other</option>
          </select>
        
  <label for="watchBrand">My watch brand</label>
          <select id="watchBrand" name="contact[watchBrand]">
            <option>Audemars Piguet</option>
            <option>Rolex</option>
            <option>Hublot</option>
          </select>
        
          <label for="watchModelname">Watch Model Name</label>
  <input type="text" id="watchModelname" name="contact[watchModelname]" placeholder="Watch model name" />
        
          <label for="watchModelnumber">Watch Model Number</label>
  <input type="text" id="watchModelnumber" name="contact[watchModelnumber]" placeholder="Watch model number" />
        
          <label for="watchAge">Watch Age</label>
  <input type="text" id="watchAge" name="contact[watchAge]" placeholder="Watch age" />
          
          <label for="boxPapers">Do you have the original box & papers?</label>
          <select id="boxPapers" name="contact[boxPapers]">
            <option>Box only</option>
            <option>Papers only</option>
            <option>Box & Papers</option>
            <option>Neither</option>
          </select>
        
          <label for="ContactFormMessage">What would you like to trade/sell your watch for?</label>
          <textarea rows="10" id="ContactFormMessage" class="input-full" name="contact[body]">{% if form.body %}{{ form.body }}{% endif %}</textarea>

          <button type="submit" class="btn">
            {{ 'contact.form.send' | t }}
          </button>

        {% endform %}
      </div>

    </div>
  </div>

</div>
